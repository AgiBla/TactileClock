<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- default font size and color -->
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/text</item>
        <!-- link color -->
        <item name="android:textColorLink">@color/link</item>
        <!-- style to prevent all-caps on buttons -->
        <item name="buttonStyle">@style/NoAllCapsButton</item>
    </style>

    <style name="NoAllCapsButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="HeadingTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textSizeHeading</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/heading</item>
    </style>

</resources>
